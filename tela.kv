#:import RiseInTransition kivy.uix.screenmanager.RiseInTransition


<Button>:
    border: (2, 2, 2, 2)
    border_width: 9
    border_color: 1, 1, 0, 1
    border_radius: [90]


<ScreenManager>:
    transition: RiseInTransition()
    MenuStart:
        id: menu_start
        name: 'menu_start'

    MenuSex:
        id: menu_sex
        name: 'menu_sex'
    
    ExibirResultados:
        id: exibir_resultados
        name: 'exibir_resultados'


<MenuStart>:
    GridLayout:
        cols: 1
        spacing: 6
        padding: 10

        Button:
            text: 'START'
            font_size: root.font_title
            color: 1, 0, 1, 1
            on_release:
                root.manager.current = 'menu_sex'


<MenuSex>
    GridLayout:
        cols: 1
        spacing: 2
        padding: 10

        Button:
            text: 'Homem'
            font_size: root.font_title
            color: 1, 0, 1, 1
            on_release:
                root.manager.current = 'exibir_resultados'
                root.definitionOfSexMen()
        
        Button:
            text: 'Mulher'
            font_size: root.font_title
            color: 1, 0, 1, 1
            on_release:
                root.manager.current = 'exibir_resultados'
                root.definitionOfSexWomen()

        Button:
            text: 'Random'
            font_size: root.font_title
            color: 1, 0, 1, 1
            on_release:
                root.manager.current = 'exibir_resultados'
                root.definitionOfSexRandom()


<ExibirResultados>
    BoxLayout:
        orientation: 'vertical'
        
        Label:
            text: 'RESULTADO'
            font_size: root.font_title
            height: dp(100)
        
        Label:
            id: label_sexo
            text: ''
            font_size: root.font_text
            height: dp(40)
        
        Label:
            id: label_result
            text: 'SEXO'
            font_size: root.font_text_menu
            height: dp(40)

        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: dp(100)  # Altura dos botões

            Button:
                text: 'Gerar'
                font_size: root.font_button
                size_hint_x: 0.3  # Largura máxima de 30%
                on_release: 
                    root.whatToDo()

            Button:
                text: 'Voltar'
                font_size: root.font_button
                size_hint_x: 0.3  # Largura máxima de 30%
                on_release: 
                    root.manager.current = 'menu_sex'
                    root.clearLabel()


